<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratbold"
                android:text="Add New Product"/>

            <TextView
                android:id="@+id/categorySpin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:hint="Select Category"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/montserratregular"
                android:background="@drawable/edittextborder" />

            <TextView
                android:id="@+id/subCategorySpin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:hint="Select Sub Category"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/montserratregular"
                android:background="@drawable/edittextborder" />

            <TextView
                android:id="@+id/productSpin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:hint="Select Product"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/montserratregular"
                android:background="@drawable/edittextborder" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Product Description"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/productStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Product Stock"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/productUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Product Unit"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/productPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Product Price"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/layoutborder"
                    android:gravity="center">

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/productPrimaryImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        app:siRadius="5dp"/>

                    <TextView
                        android:id="@+id/primaryImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Primary Image"
                        android:fontFamily="@font/montserratregular"
                        android:background="@drawable/uploadborder"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/layoutborder"
                    android:gravity="center">

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/productSecondaryImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        app:siRadius="5dp"/>

                    <TextView
                        android:id="@+id/secondaryImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Second Image"
                        android:fontFamily="@font/montserratregular"
                        android:background="@drawable/uploadborder"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/save"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/updateborder"
                android:drawablePadding="50dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/montserratmedium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>